<%- include('parts/header') %>
<%- include('parts/navpar.ejs') %>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-12">
            <div class="card shadow-sm p-4">
                <h3 class="card-title text-center mb-4">Login</h3>
                <form action="/auth/login" method="POST">
                    <div class="mb-3">
                        <label for="email" class="form-label">Email address</label>
                        <input class="form-control" id="email" name="email" placeholder="Enter your email">
                        <!-- Display validation error for 'email' -->
                        <% if (validationErrors) { %>
                            <% validationErrors.forEach(err => { %>
                                <% if (err.path === 'email') { %>
                                    <br>
                                    <p class="alert alert-warning" style="background-color: #fff3cd; border-color: #ffeeba;">
                                        <%= err.msg %>
                                    </p>
                                <% } %>
                            <% }) %>
                        <% } %>
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" class="form-control" id="password" name="password" placeholder="Enter your password">
                        <!-- Display validation error for 'password' -->
                        <% if (validationErrors) { %>
                            <% validationErrors.forEach(err => { %>
                                <% if (err.path === 'password') { %>
                                    <br>
                                    <p class="alert alert-warning" style="background-color: #fff3cd; border-color: #ffeeba;">
                                        <%= err.msg %>
                                    </p>
                                <% } %>
                            <% }) %>
                        <% } %>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Login</button>
                </form>
                <% if(authErr) { %>
                    <br>
                    <p class="alert alert-danger">
                        <%= authErr %>
                    </p>
                <%}%>
                <p class="text-center mt-3">Don't have an account? <a href="/auth/signup">Sign up</a></p>
            </div>
        </div>
    </div>
</div>

<%- include('parts/footer') %>
