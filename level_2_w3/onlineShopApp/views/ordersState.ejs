<%- include('parts/header') %>
<%- include('parts/navpar.ejs') %>

<div class="container my-5">
    <h2 class="mb-4">Your Orders</h2>

    <% if (orders && orders.length > 0) { %>
        <div class="row">
            <% orders.forEach(order => { %>
                <div class="card shadow-sm mb-4">
                    <div class="card-body">
                        <!-- Order Info -->
                        <h5 class="card-title">Order ID: <%= order.id %></h5>
                        <p class="card-text">Order Date: <%= order.date %></p>
                        <p class="card-text">Order Status: <span class="badge <%= order.statusClass %>"><%= order.status %></span></p>

                        <!-- Order Items -->
                        <h6>Items:</h6>
                        <ul class="list-group list-group-flush">
                            <% order.items.forEach(item => { %>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <p class="mb-1"><strong><%= item.name %></strong></p>
                                        <p class="text-muted mb-0">Quantity: <%= item.quantity %> | Price: $<%= item.price %></p>
                                    </div>
                                    <div>
                                        <p class="mb-0"><strong>Total: $<%= (item.price * item.quantity).toFixed(2) %></strong></p>
                                    </div>
                                </li>
                            <% }) %>
                        </ul>

                        <!-- Total Price -->
                        <div class="text-end mt-3">
                            <p class="card-text"><strong>Order Total: $<%= order.items.reduce((total, item) => total + item.price * item.quantity, 0).toFixed(2) %></strong></p>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    <% } else { %>
        <div class="text-center text-muted mt-5">
            <p>You have no orders yet.</p>
            <a href="/" class="btn btn-primary">Shop Now</a>
        </div>
    <% } %>
</div>

<%- include('parts/footer') %>
