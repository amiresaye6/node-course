<%- include('parts/header') %>
<%- include('parts/navpar.ejs') %>

<div class="container mt-5">
    <div class="row">
        <!-- Product Image and Add to Cart Section -->
        <div class="col-lg-6 col-md-12 mb-4">
            <div class="card shadow-sm">
                <img src="/<%= product.img %>" alt="<%= product.name %>" class="card-img-top img-fluid rounded">
                <div class="card-body">
                    <h5 class="card-title mb-3"><%= product.name %></h5>
                    <form action="/cart" method="post" class="d-flex flex-column">
                        <div class="form-group mb-2">
                            <label for="quantity" class="form-label">Quantity</label>
                            <input 
                                type="number" 
                                name="amount" 
                                id="quantity" 
                                class="form-control" 
                                placeholder="Enter quantity" 
                                min="1" 
                                title="Specify the quantity you want to add to the cart">
                        </div>
                        <input type="hidden" name="productId" value="<%= product._id %>">
                        <input type="hidden" name="name" value="<%= product.name %>">
                        <input type="hidden" name="price" value="<%= product.price %>">
                        <input type="hidden" name="img" value="<%= product.img %>">
                        <input type="hidden" name="redirectTo" value="/products/<%= product._id %>">
                        <button type="submit" class="btn btn-primary w-100">Add to Cart</button>
                    </form>
                    <% if(validationErrors.length > 0){ %>
                        <div class="alert alert-danger mt-3">
                            <%= validationErrors[0].msg %>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>

        <!-- Product Description and Price Section -->
        <div class="col-lg-6 col-md-12">
            <div class="card shadow-sm p-4">
                <div class="card-body">
                    <h5 class="card-title mb-3"><%= product.name %></h5>
                    <p class="card-text font-weight-bold">
                        Price: <span class="text-success">$<%= product.price %></span>
                    </p>
                    <hr>
                    <h6 class="mt-4">Product Description</h6>
                    <p class="card-text"><%= product.description %></p>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('parts/footer') %>
