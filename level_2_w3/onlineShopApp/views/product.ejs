<%- include('parts/header') %>
<%- include('parts/navpar.ejs') %>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 col-12 mb-4">
            <div class="card shadow-sm">
                <img src="/<%= product.img %>" alt="<%= product.name %>" class="card-img-top img-fluid">
                <div class="card-body">
                    <form action="/cart" method="post" class="d-flex flex-column">
                        <input type="number" name="ammount" class="form-control mb-3" placeholder="Quantity" min="1">
                        <input type="submit" value="Add to Cart" class="btn btn-primary w-100">
                    </form>
                </div>
            </div>
        </div>
        
        <div class="col-md-6 col-12">
            <div class="card shadow-sm p-3">
                <div class="card-body">
                    <h5 class="card-title mb-3"><%= product.name %></h5>
                    <p class="card-text font-weight-bold">Price: <span class="text-success">$<%= product.price %></span></p>
                    <p class="card-text"><%= product.description %></p>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('parts/footer') %>
